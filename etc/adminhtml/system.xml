<?xml version='1.0'?>
<config
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd"
>
	<system>
		<section
			id='df_backend'
			showInDefault='1' showInStore='1' showInWebsite='1'
			translate='label'
		>
			<tab>_df</tab>
			<label>Backend</label>
			<class>separator-top</class>
			<!-- 2015-10-05 https://mage2.pro/t/114 -->
			<resource>Df_Backend::config</resource>
<!--
2015-09-25
Первые 2 цифры sortOrder соответствуют порядковому номеру первой буквы модуля
в английском алфавите: https://en.wikipedia.org/wiki/English_alphabet
-->
			<group
				id='login'
				showInDefault='1' showInStore='0' showInWebsite='0'
				sortOrder='12'
				translate='label'
			>
				<label>Login</label>
				<field
					id='google'
					showInDefault='1' showInStore='0' showInWebsite='0'
					sortOrder='1'
					translate='label'
					type='Df\Framework\Form\Element\Checkbox'
				>
					<label>Allow Login with Google Account?</label>
					<backend_model>Df\Config\Backend\Checkbox</backend_model>
					<comment><![CDATA[<a href='https://mage2.pro/t/46'>documentation</a>]]></comment>
				</field>
			</group>
		</section>
	</system>
</config>